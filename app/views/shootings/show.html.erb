


  <% dead_victims = 0 %>
  <% injured_victims = 0 %> 
  <% dead_names = [] %> 
  <% injured_names = [] %> 
  <% dead_ages = [] %>
  <% injured_ages = [] %>  
  <% @victims.each do |victim| %>
  <% if victim.dead == true %>
  <% dead_victims += 1 %>
  <% dead_names << victim.name %>
  <% dead_ages << victim.age %>
  <% else %>
  <% injured_victims += 1 %>
  <% injured_names << victim.name %>  
  <% injured_ages << victim.age %>  
  <% end %>
  <% end %>
 
