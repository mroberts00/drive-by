
<body class="shootings-table">
<h1>Shootings Catalogue</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Vehicle</th>
      <th>Weapon of Choice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shootings.each do |shooting| %>
      <tr>
        <td><%= shooting.created_at.strftime("%A, %d %B %Y") %></td>
        <td><%= shooting.location %></td>
        <td><%= shooting.vehicle %></td>
        <td><%= shooting.weapon %></td>
        <td><%= link_to 'News Article', shooting %></td>
        <td><%= link_to 'Cleanse History', shooting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="new-shooting-link">
  <%= link_to "Oh no! There's been another shooting!", new_shooting_path %>
  </br>
  <%= link_to "View the victims", victims_path %>
</div>
</body>
